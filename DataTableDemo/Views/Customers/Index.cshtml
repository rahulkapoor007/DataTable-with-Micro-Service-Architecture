@model DataTableDemo.Models.CustomersModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Customer/Customers.css" rel="stylesheet" />
<link href="~/js/Plugins/select2/css/select2.css" rel="stylesheet" />
@*******************************DATATABLE*******************************@

<div id="CustomerPartialTableDiv">
    <table class="CustomTblColor table stripe borderless order-column table-striped" id="CustomerTable">
        <thead>
            <tr>
                <th style="min-width: 120px;">Id</th>
                <th style="min-width: 120px;">Name</th>
                <th style="min-width: 60px;">Address</th>
                <th style="min-width: 120px;">Phone Number</th>
                <th style="min-width: 120px;">Email Id</th>
            </tr>
            <tr>
                <th>
                    @Html.TextBoxFor(a => a.Id, "", new { @class = "form-control id select2-container", @placeholder = "--Type value--", @style = "width: 134px !important; border-radius: 4px !important;" })
                </th>
                <th style="min-width:150px;">
                    <select class="form-control namedropdown customerDropDown" multiple>
                    </select>
                </th>
                <th style="min-width:150px;">
                    <select class="form-control addressdropdown customerDropDown" multiple>
                    </select>
                </th>
                <th>
                    @Html.TextBoxFor(a => a.PhoneNumber, "", new { @class = "form-control phoneNumber select2-container", @placeholder = "--Type Value--", @style = "width: 134px !important; border-radius: 4px !important;" })
                </th>
                <th>
                    @Html.TextBoxFor(a => a.Email, "", new { @class = "form-control email select2-container", @placeholder = "--Type Value--", @style = "width: 134px !important; border-radius: 4px !important;" })
                </th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    @***********************************************************************@

</div>

@section Scripts
    {
    <script src="js/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/Plugins/datatables/js/jquery.dataTables.js"></script>
    <script src="~/js/Plugins/select2/js/select2.js"></script>
    <script src="~/js/Plugins/MultiSelectSelect2/select2MultiselectCheckbox.js"></script>
    <script src="~/js/Customer/Customer.js"></script>
}